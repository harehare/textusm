{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2019",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "lib": ["es6", "dom"],
        "rootDir": "src/ts",
        "strict": true,
        "importHelpers": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true
    },
    "exclude": ["node_modules", "**/*.spec.ts"]
}
