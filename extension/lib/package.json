  ],
  "author": "harehare",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.3",
    "clean-webpack-plugin": "^4.0.0",
    "jest": "^29.5.0",
    "module": "^1.2.5",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "tslint": "^6.1.3",
    "typescript": "^5.1.6",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.9.0"
  },
  "jest": {
