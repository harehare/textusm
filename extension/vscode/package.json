{
  "name": "textusm",
  "displayName": "TextUSM",
  "description": "Generate a User Story Map from indented text.",
  "author": {
    "name": "harehare"
  },
  "publisher": "harehare",
  "version": "0.9.4",
  "engines": {
    "vscode": "^1.60.0"
  },
  "homepage": "https://textusm.com",
  "galleryBanner": {
    "color": "#282C32",
    "theme": "dark"
  },
  "license": "MIT",
  "icon": "images/icon.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "svg",
    "user-story-mapping",
    "user-story-map",
    "diagram",
    "mindmap"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "usm",
        "aliases": [
          "usm",
          "USM",
          "TextUSM"
        ],
        "extensions": [
          "USM",
          ".usm",
          ".USM"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "usm",
        "scopeName": "text.usm",
        "path": "./syntax/usm.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "[usm]": {
        "editor.insertSpaces": true
      }
    },
    "menus": {
      "editor/title": [
        {
          "when": "textUsmPreviewFocus",
          "command": "extension.zoomIn",
          "group": "navigation"
        },
        {
          "when": "textUsmPreviewFocus",
          "command": "extension.zoomOut",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.zoomIn",
          "when": "false"
        },
        {
          "command": "extension.zoomOut",
          "when": "false"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.showPreview",
        "title": "TextUSM: Open Preview",
        "when": "editorTextFocus && editorLangId == usm"
      },
      {
        "command": "extension.exportSvg",
        "title": "TextUSM: Export SVG",
        "when": "editorTextFocus && editorLangId == usm"
      },
      {
        "command": "extension.exportPng",
        "title": "TextUSM: Export PNG",
        "when": "editorTextFocus && editorLangId == usm"
      },
      {
        "command": "extension.newDiagram",
        "title": "TextUSM: New Diagram",
        "when": "editorTextFocus"
      },
      {
        "when": "textUsmPreviewFocus",
        "command": "extension.zoomIn",
        "title": "TextUSM: ZoomIn",
        "icon": "$(zoom-in)"
      },
      {
        "when": "textUsmPreviewFocus",
        "command": "extension.zoomOut",
        "title": "TextUSM: ZoomOut",
        "icon": "$(zoom-out)"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "TextUSM",
      "properties": {
        "textusm.fontName": {
          "type": "string",
          "default": "Nunito Sans",
          "markdownDescription": "Font family for diagram."
        },
        "textusm.exportDir": {
          "type": "string",
          "default": null,
          "markdownDescription": "Set the output directory for svg files."
        },
        "textusm.backgroundColor": {
          "type": "string",
          "default": "transparent",
          "markdownDescription": "background color for diagram."
        },
        "textusm.activity.color": {
          "type": "string",
          "default": "#FFFFFF",
          "markdownDescription": "Color for user activity."
        },
        "textusm.activity.backgroundColor": {
          "type": "string",
          "default": "#266B9A",
          "markdownDescription": "Background color for user activity."
        },
        "textusm.task.color": {
          "type": "string",
          "default": "#FFFFFF",
          "markdownDescription": "Color for user task."
        },
        "textusm.task.backgroundColor": {
          "type": "string",
          "default": "#3E9BCD",
          "markdownDescription": "Background color for user task."
        },
        "textusm.story.color": {
          "type": "string",
          "default": "#000000",
          "markdownDescription": "Color for user story."
        },
        "textusm.story.backgroundColor": {
          "type": "string",
          "default": "#FFFFFF",
          "markdownDescription": "Background color for user story."
        },
        "textusm.line.color": {
          "type": "string",
          "default": "#434343",
          "markdownDescription": "Line color."
        },
        "textusm.label.color": {
          "type": "string",
          "default": "#8C9FAE",
          "markdownDescription": "Label color."
        },
        "textusm.text.color": {
          "type": "string",
          "default": "#111111",
          "markdownDescription": "Text color."
        },
        "textusm.card.width": {
          "type": "number",
          "default": 140,
          "markdownDescription": "Card width."
        },
        "textusm.card.height": {
          "type": "number",
          "default": 65,
          "markdownDescription": "Card height."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "NODE_ENV=production webpack --mode production",
    "dev": "webpack --mode development --watch",
    "prod": "NODE_ENV=production webpack --mode production"
  },
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.10.2",
    "@types/svgo": "^2.4.2",
    "@types/uuid": "^8.3.1",
    "@types/vscode": "^1.60.0",
    "clean-webpack-plugin": "^4.0.0",
    "terser-webpack-plugin": "^5.2.4",
    "ts-loader": "^9.2.6",
    "tslint": "^6.1.3",
    "typescript": "^4.4.3",
    "vscode": "^1.1.37",
    "webpack": "^5.55.1",
    "webpack-cli": "^4.8.0",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/harehare/textusm.git"
  },
  "dependencies": {
    "svgo": "^2.7.0",
    "uuid": "^8.3.2"
  }
}
