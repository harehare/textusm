{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "usm",
  "patterns": [
    {
      "include": "#properties"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#task"
    },
    {
      "include": "#activity"
    },
    {
      "include": "#settings"
    }
  ],
  "repository": {
    "properties": {
      "match": "(#[^#:|]+:[^#:|]+)",
      "name": "constant.language.usm"
    },
    "comments": {
      "match": "(#[^#:|]*)",
      "name": "comment.usm"
    },
    "activity": {
      "match": "^[^ #]([^#:|]+)",
      "name": "keyword.usm"
    },
    "task": {
      "match": "^( {4}[^ #][^#:|]+)",
      "name": "string.usm"
    },
    "settings": {
      "match": "(: \\|[^|]+)|(\\|[^|]+)",
      "name": "settings.usm"
    }
  },
  "scopeName": "text.usm"
}
